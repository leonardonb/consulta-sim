<p style="color: green"><%= notice %></p>

<h1>Medicos</h1>

<div id="medicos">
  <% @medicos.each do |medico| %>
    <%= render medico %>
    <p>
      <%= button_to "Mostrar este médico", medico_path(medico), method: :get, class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= button_to "Novo médico", new_medico_path, method: :get, class: "btn btn-primary" %>
<%= button_to "Voltar para a página inicial", root_path, method: :get, class: "btn btn-secondary" %>
