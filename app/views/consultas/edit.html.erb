<h1>Editar consulta</h1>

<%= form_for @consulta, url: consulta_path(@consulta), method: :patch do |form| %>
  <!-- Seus campos de edição aqui -->
  <div class="field">
    <%= form.label :data %>
    <%= form.date_select :data, start_year: 2023, end_year: 2030 %>
  </div>

  <div class="field">
    <%= form.label :horario %>
    <%= form.time_select :horario %>
  </div>

  <div class="field">
    <%= form.label :paciente_id %>
    <%= form.collection_select :paciente_id, Paciente.all, :id, :nome, prompt: "Selecione um paciente" %>
  </div>

  <div class="field">
    <%= form.label :medico_id %>
    <%= form.collection_select :medico_id, Medico.all, :id, :nome, prompt: "Selecione um médico" %>
  </div>

  <!-- Botão de submissão -->
  <div class="actions">
    <%= form.submit "Salvar" %>
  </div>
<% end %>
